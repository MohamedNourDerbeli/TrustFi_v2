# Supabase Configuration
# Get these values from your Supabase project dashboard:
# Settings → API → Project URL and anon/public key

VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Pinata Configuration (for IPFS uploads)
# Get these from https://pinata.cloud/

VITE_PINATA_API_KEY=your-pinata-api-key
VITE_PINATA_SECRET_KEY=your-pinata-secret-key

# KILT Protocol Configuration
# Network: 'peregrine' for testnet, 'spiritnet' for mainnet
VITE_KILT_NETWORK=peregrine
VITE_KILT_WSS_ADDRESS=wss://peregrine.kilt.io
VITE_KILT_ENABLED=true
VITE_KILT_MODE=hybrid
